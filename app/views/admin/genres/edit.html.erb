<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5>ジャンル編集</h5>
      <%= form_with model: @genre,url: admin_genre_path,local: true do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存",class: "btn btn-success btn-md" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>