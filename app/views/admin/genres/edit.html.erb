<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-5">
      <h5>ジャンル編集</h5>
    </div>
    <div class="col-md-12">
      <%= form_with model: @genre,url: admin_genre_path,local: true do |f| %>
      <table>
        <tbody>
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name, class: "mx-5" %></td>
            <td><%= f.submit "変更を保存",class: "btn btn-success btn-md " %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>