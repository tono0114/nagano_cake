<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-5">
      <h5>ジャンル編集</h5>
    </div>
    <div class="col-md-12">
      <%= form_with model: @genre,url: admin_genre_path,local: true do |f| %>
      <table>
        <tbody>
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name, class: "mx-5" %></td>
            <td><%= f.submit "変更を保存",class: "btn btn-success btn-md px-3" %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= link_to "削除する", admin_genre_path(@genre.id), method: :delete, class: "btn btn-danger btn-md px-4 mt-3" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>