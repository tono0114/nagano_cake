<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="genre_top">ジャンル一覧・追加</h5>
      <table>
        <tbody>
        <%= form_with model: @new_genre,url: admin_genres_path,local: true do |f| %>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "新規登録",class: "btn btn-success btn-md" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <table class="table">
        <thead>
          <th>ジャンル</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class: "btn btn-success btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>