<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="customer_top">会員一覧</h5>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= link_to customer.id,class: "text_secondary" %></td>
            <td>
            <%= link_to admin_customer_path do %>
              <%= customer.last_name %>
              <%= customer.first_name %>
            <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_active %>
            <td><p class="text_success">有効</p></td>
            <% else %>
            <td><p class="text_secondary">退会</p></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>