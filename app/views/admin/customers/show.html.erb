<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-4">
      <h5 class="customers_show"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
    </div>
    <div class="col-md-12">
      <table>
        <tbody>
          <tr>
            <td><p>会員ID</p></td>
            <td><p><%= @customer.id %></p></td>
          </tr>
          <tr>
            <td><p>氏名</p></td>
            <td><p><%= @customer.last_name %>&emsp;<%= @customer.first_name %></p></td>
          </tr>
          <tr>
            <td><p>フリガナ</p></td>
            <td><p><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></p></td>
          </tr>
          <tr>
            <td><p>郵便番号</p></td>
            <td><p><%= @customer.postal_code %></p></td>
          </tr>
          <tr>
            <td><p>住所</p></td>
            <td><p><%= @customer.address %></p></td>
          </tr>
          <tr>
            <td><p>電話番号</p></td>
            <td><p><%= @customer.telephone_number %></p></td>
          </tr>
          <tr>
            <td><p class="mr-5">メールアドレス</p></td>
            <td><p><%= @customer.email %></p></td>
          </tr>
          <tr>
            <td><p>会員ステータス</p></td>
            <% if @customer.is_active %>
            <td><p class="text_success">有効</p></td>
            <% else %>
            <td><p class="text_secondary">退会</p></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 mt-2">
      <table>
        <tbody>
          <tr>
            <td class="col-md-1"></td>
            <td class="col-md-2"><%= link_to "編集する",edit_admin_customer_path,class: "btn btn-success btn-sm" %></td>
            <td class="col-md-9"><%= link_to "注文履歴一覧を見る",admin_homes_top_path,class: "btn btn-primary btn-sm ml-0" %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>