<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
        <table>
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><pre><%= @customer.last_name %>  <%= @customer.first_name %></pre></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><pre><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></pre></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <% if @customer.is_active %>
              <td><p class="text_success">有効</p></td>
              <% else %>
              <td><p class="text_secondary">退会</p></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <table>
          <tbody>
            <tr>
              <td></td>
              <td><%= link_to "編集する",edit_admin_customer_path,class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "注文履歴一覧を見る",admin_homes_top_path,class: "btn btn-primary btn-sm" %></td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>