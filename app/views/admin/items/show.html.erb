<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5>商品詳細</h5>
      <%= attachment_image_tag @item, :image_id, format: 'jpeg', size: "100x100" %>
      <div class="col">
        <table>
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>
                税込価格<br>
                (税抜価格)
              </td>
              <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
             <% if @item.is_active %>
             <td><p class= "text-success">販売中</p></td>
             <% else %>
             <td><p class= "text-secondary">販売停止中</p></td>
             <% end %>
            </tr>
          </tbody>
        </table>
        <%= link_to "編集する",edit_admin_item_path(@item.id),class: "btn btn-success btn-md" %>
      </div>
    </div>
  </div>
</div>