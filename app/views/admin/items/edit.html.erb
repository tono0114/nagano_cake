<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5>商品編集</h5>
      <%= form_with model: @item,url: admin_item_path,local: true do |f| %>
      <table>
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select(:genre_id, @genres, :id, :name) %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, 'true' %>
              <%= f.label :is_active, '販売中', value: true %>
              <%= f.radio_button :is_active, 'false' %>
              <%= f.label :is_active, '販売停止中', value: false %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "変更を保存",class: "btn btn-success btn-md" %>
      <% end %>
    </div>
  </div>
</div>