<%= render 'layouts/admin_header' %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 ml-5">
      <h5 class="item_top">商品一覧</h5>
    </div>
    <div class="col-md-1 mr-0 mb-3" >
      <%= link_to new_admin_item_path do %>
        <% image_tag "add-button.png", size: "30x30", class: "plus_button" %>
      <% end %>
    </div>
      <table class="table">
        <thead class="items_table">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id),class: "text-secondary" %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
            <td><p class= "text-success">販売中</p></td>
            <% else %>
            <td><p class= "text-secondary">販売停止中</p></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    　<div class="d-flex justify-content-center"><%= paginate @items %></div>
    </div>
  </div>
</div>