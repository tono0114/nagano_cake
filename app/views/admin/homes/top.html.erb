<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
  　　<h5 class="order_top">注文履歴一覧</h5>
  　</div>
  　<div class="col">
        <table class="table">
          <thead class="orders_thead">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.to_s(:datetime_jp),admin_order_path(order.id), class: "text-secondary" %></td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><%= order.order_items.sum(:amount) %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= paginate @orders %>
    </div>
  </div>
</div>