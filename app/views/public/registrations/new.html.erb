<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="sign_up">新規会員登録</h5>
        <table>
        <%= form_with model: @public,url: customer_registration_path,local: true do |f| %>
          <tbody>
            <tr>
              <div class="field">
              <td>名前</td>
              <td><%= f.label :last_name, "(姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "長野" %></td>
              <td><%= f.label :first_name, "(名)" %><%= f.text_field :first_name, autocomplete: "first_name", placeholder: "菓子男" %></td>
              </div>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)<%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "ナガノ" %></td>
              <td>(メイ)<%= f.text_field :first_name_kana, autocomplete:"first_name_kana", placeholder: "カシオ" %></td>
            </tr>
            <tr>
              <td><%= f.label :email,"メールアドレス" %></td>
              <td><%= f.email_field :email, placeholder: "cake-daisuki@example.com", autocomplete: "email" %></td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %> </td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td><%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "00000000000" %></td>
            </tr>
            <tr>
              <td>パスワード(6文字以上)</td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録",class: "btn btn-success btn-sm" %></td>
            </tr>
          </tbody>
        <% end %>
        </table>
      <h5 class="finished_sign_up">既に登録済みの方</h5>
      　<p><%= link_to "こちら ",new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>