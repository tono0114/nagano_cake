<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-3">
      <h5>注文情報確認</h5>
    </div>
    <div class="col-md-4">
      <table border="1" class="mb-3">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image.url, size: "40x30" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.total_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table border="1">
        <tr>
          <th>送料</th>
          <td><%= @new_order.shipping_cost %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= number_to_currency(@cart_items.sum_price, unit: "", strip_insignificant_zeros: true) %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td><%= @cart_items.total_payment %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-12">
      <table>
        <tr>
          <th class="col-md-2">支払方法</th>
          <td class="col-md-3"><%= @new_order.payment_method %></td>
        </tr>
        <tr>
          <td>&ensp;</td>
        </tr>
        <tr>
          <th class="col-md-2">お届け先</th>
          <td class="col-md-8">〒<%= @new_order.customer.full_address %></td>
        </tr>
      </table>
      <%= form_with model: @new_order, url: public_orders_path, local: true do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :customer_id %>
      <%= f.submit "注文を確定する", class: "btn btn-success btn-sm mt-4" %>
      <% end %>
    </div>
  </div>
</div>