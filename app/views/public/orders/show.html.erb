<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-3">
      <h5>注文履歴詳細</h5>
    </div>
    <div class="col-md-7 mr-1">
      <h7>注文情報</h7>
      <table border="1" class="mt-1" width="100%">
        <tr>
          <th class="col-md-3 show_table_title">注文日</th>
          <td class="col-md-9"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="col-md-3 show_table_title">配送先</th>
          <td class="col-md-9"><%= @order.address %></td>
        </tr>
        <tr>
          <th class="col-md-3 show_table_title">支払方法</th>
          <td class="col-md-9"><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="col-md-3 show_table_title">ステータス</th>
          <td class="col-md-9"><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h7>請求情報</h7>
      <table border="1" class="mt-1" width="100%">
        <tr>
          <th class="col-md-7 show_table_title">商品合計</th>
          <td class="col-md-5">
            <%= @order.total_payment - 800 %>
          </td>
        </tr>
        <tr>
          <th class="col-md-7 show_table_title">配送料</th>
          <td class="col-md-5">800</td>
        </tr>
        <tr>
          <th class="col-md-7 show_table_title">ご請求額</th>
          <td class="col-md-5"><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-10 mt-2">
      <h7>注文内容</h7>
      <table border="1" class="mt-1">
        <thead class="show_table_title">
          <tr>
            <th class="col-md-8">商品名</th>
            <th class="col-md-2">単価(税込)</th>
            <th class="col-md-1">個数</th>
            <th class="col-md-1">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_item.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.add_tax_price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>