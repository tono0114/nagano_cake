<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>注文履歴一覧</h5>
    </div>
    <div class="col-md-12 mt-3">
      <table border="1">
        <thead>
          <tr>
            <th class="col-md-1">注文日</th>
            <th class="col-md-4">配送先</th>
            <th class="col-md-2">注文商品</th>
            <th class="col-md-1">支払金額</th>
            <th class="col-md-1 p-0">ステータス</th>
            <th class="col-md-1">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.address %></td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.order_status %></td>
            <td><p class="text-center my-0"><%= link_to "表示する",public_order_path(order.id), class: "btn btn-primary btn-sm" %></p></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>