<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="addresses">配送先登録/一覧</h5>
    </div>
    <div class="col">
      <table>
      <%= form_with model: @address, url: public_addresses_path, local: true do |f| %>
        <tr>
          <td class="col-md-3">郵便番号(ハイフンなし)</td>
          <td class="col-md-6"><%= f.text_field :postal_code %></td>
          <td class="col-md-3"></td>
        </tr>
        <tr>
          <td class="col-md-3">住所</td>
          <td class="col-md-6"><%= f.text_field :address, size: "50" %></td>
          <td class="col-md-3"></td>
        </tr>
        <tr>
          <td class="col-md-3">宛名</td>
          <td class="col-md-3"><%= f.text_field :name %></td>
          <td class="col-md-6"><%= f.submit "新規登録", class: "btn btn-success btn-sm" %></td>
        </tr>
        <tr>
          <td><%= f.hidden_field :customer_id, :value => @customer.id %></td>
        </tr>
      <% end %>
      </table>
      <div class="col-md-8">
        <table border="1" class="mt-5">
          <thead>
            <tr>
              <th class="col-md-1">郵便番号</th>
              <th class="col-md-3">住所</th>
              <th class="col-md-1">宛名</th>
              <th class="col-md-3"></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する",edit_public_address_path(address.id), class: "btn btn-success btn-sm ml-5 mr-2" %>
                <%= link_to "削除する",public_address_path(address.id), method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>