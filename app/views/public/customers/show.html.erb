<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-4">
      <h5 class="mypage">マイページ</h5>
    </div>
    <div class="col-md-12 mb-2">
      <p>
        <strong>登録情報</strong>&emsp;
        <%= link_to "編集する",edit_public_customers_path,class: "btn btn-success btn-sm px-3" %>
      </p>
    </div>
    <div class="col-md-12 mb-3">
        <table border="1" width="50%">
          <tr>
            <td class="mypage_table_title col-md-3 pl-0">氏名</td>
            <td class="col-md-9 pl-0">
              <%= @customer.last_name %>&emsp;
              <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td class="mypage_table_title">カナ</td>
            <td>
              <%= @customer.last_name_kana %>&emsp;
              <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <td class="mypage_table_title">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="mypage_table_title">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="mypage_table_title">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="mypage_table_title">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
    </div>
    <div class="col-md-5 mt-3">
      <p class="mb-3">
        <strong>配送先</strong>&emsp;
        <%= link_to "一覧を見る",public_addresses_path,class: "btn btn-primary btn-sm ml-5" %>
      </p>
      <p>
        <strong>注文履歴</strong>
        <%= link_to "一覧を見る",public_orders_path,class: "btn btn-primary btn-sm ml-5" %>
      </p>
    </div>
  </div>
</div>