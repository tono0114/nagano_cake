<%= render 'layouts/public_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="mypage">マイページ</h5>
        <table>
          <tr>
            <td>登録情報</td>
            <td><%= link_to "編集する",edit_public_customers_path,class: "btn btn-success btn-sm" %></td>
          </tr>
        </table>
        <table class="table">
          <tr>
            <td>氏名</td>
            <td><pre><%= @customer.last_name %> <%= @customer.first_name %></pre></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><pre><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></pre></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
        <table>
          <tr>
            <td>配送先</td>
            <td><%= link_to "一覧を見る",public_addresses_path,class: "btn btn-primary btn-sm" %></td>
          </tr>
          <tr>
            <td>注文履歴</td>
            <td><%= link_to "一覧を見る",public_orders_path,class: "btn btn-primary btn-sm" %></td>
          </tr>
        </table>
    </div>
  </div>
</div>